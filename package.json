{
  "name": "directory-listing",
  "description": "GitHub Actions to generate index.html files for directory listing",
  "type": "module",
  "homepage": "https://github.com/gacts/directory-listing#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gacts/directory-listing.git"
  },
  "bugs": {
    "url": "https://github.com/gacts/directory-listing/issues"
  },
  "keywords": [
    "actions",
    "github",
    "listing",
    "index.html"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "fmt": "prettier --write ./src ./*.js && eslint ./src/**/*.js --fix",
    "lint": "eslint ./src/**/*.js"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "rollup": "^4.50.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "engines": {
    "node": "20"
  },
  "volta": {
    "node": "20"
  }
}
